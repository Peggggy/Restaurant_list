<div class="container mt-5">
  <form action="/restaurants" method="POST">
    <div class="form-group">
      <label for="name">店名：</label>
      <input type="text" class="form-control" placeholder="" name="name" value="{{newRestaurant.name}}">
    </div>
    <div class="form-group">
      <label for="name_en">英文店名：</label>
      <input type="text" class="form-control" placeholder="" name="name_en" value="{{newRestaurant.name_en}}">
    </div>
    <div class="form-group">
      <label for="category">餐廳類型：</label>
      <input type="text" class="form-control" placeholder="" name="category" value="{{newRestaurant.category}}">
    </div>
    <div class="form-group">
      <label for="photo">照片連結：</label>
      <input type="text" class="form-control" placeholder="請輸入照片連結" name="image" value="{{newRestaurant.image}}">
    </div>
    <div class="form-group">
      <label for="location">地址：</label>
      <input type="text" class="form-control" placeholder="" name="location" value="{{newRestaurant.location}}">
    </div>
    <div class="form-group">
      <label for="phone">電話：</label>
      <input type="text" class="form-control" placeholder="" name="phone" value="{{newRestaurant.phone}}">
    </div>
    <div class="form-group">
      <label for="google-map">地圖：</label>
      <input type="text" class="form-control" placeholder="" name="google-map" value="{{newRestaurant.google-map}}">
    </div>
    <div class="form-group">
      <label for="rating">評分：</label>
      <input type="text" class="form-control" placeholder="" name="rating" value="{{newRestaurant.rating}}">
    </div>
    <div class="form-group">
      <label for="description">簡介：</label>
      <input type="text" class="form-control" placeholder="" name="description" value="{{newRestaurant.description}}">
    </div>
    <button type="submit" class="btn btn-primary">新增</button>
  </form>
</div>